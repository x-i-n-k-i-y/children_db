<Window x:Class="WPFModernVerticalMenu.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFModernVerticalMenu"
        mc:Ignorable="d"
        Title="Таблицы" Height="383" Width="300"
        WindowStartupLocation="CenterScreen"
        >

    <Grid Background="{DynamicResource SecundaryBackgroundColor}">
        <Grid.RowDefinitions >
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}"/>

        <StackPanel Grid.Row="1" Margin="27" Background="{DynamicResource SecundaryBackgroundColor}">
            <Button Content="Группы" Background="transparent" BorderBrush="#B0B7C3" FontSize="14" Foreground="#B0B7C3" Margin="0,0,0,10" Cursor="Hand" Click="btnGroups_Click"/>
            <Button Content="Дети" Background="transparent" BorderBrush="#FFB0B7C3" FontSize="14" Foreground="#FFB0B7C3" Margin="0,0,0,10" Cursor="Hand" Click="btnChildren_Click"/>
            <Button Content="Родители" Background="transparent" BorderBrush="#FFB0B7C3" FontSize="14" Foreground="#FFB0B7C3" Margin="0,0,0,10" Cursor="Hand" Click="btnParents_Click"/>
            <Button Content="Тарифы" Background="transparent" BorderBrush="#FFB0B7C3" FontSize="14" Foreground="#FFB0B7C3" Margin="0,0,0,10" Cursor="Hand" Click="btnTariffs_Click"/>
            <Button Content="Присутствие" Background="transparent" BorderBrush="#FFB0B7C3" FontSize="14" Foreground="#FFB0B7C3" Margin="0,0,0,10" Cursor="Hand" Click="btnAttendance_Click"/>
            <Button Content="Льготы" Background="transparent" BorderBrush="#FFB0B7C3" FontSize="14" Foreground="#FFB0B7C3" Margin="0,0,0,10" Cursor="Hand" Click="btnBenefits_Click"/>
            <Button Content="Оплаты" Background="transparent" BorderBrush="#FFB0B7C3" FontSize="14" Foreground="#FFB0B7C3" Margin="0,0,0,10" Cursor="Hand" Click="btnPayments_Click"/>
            <Button Content="История детей" Background="transparent" BorderBrush="#FFB0B7C3" FontSize="14" Foreground="#FFB0B7C3" Margin="0,0,0,10" Cursor="Hand" Click="btnChild_history_Click"/>
            <Button Content="История групп" Background="transparent" BorderBrush="#FFB0B7C3" FontSize="14" Foreground="#FFB0B7C3" Cursor="Hand" Click="btnGroup_history_Click"/>
        </StackPanel>
        
        
    </Grid>
</Window>
